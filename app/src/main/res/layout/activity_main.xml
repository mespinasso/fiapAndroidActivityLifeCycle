<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="br.com.mespinas.activitylifecycle.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/scoreboard"
            android:textAllCaps="true"
            android:textSize="18sp"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvScoreHome"
            android:gravity="center"
            android:padding="16dp"
            android:text="0"
            android:textSize="50sp"/>

        <TextView
            android:gravity="center"
            android:padding="16dp"
            android:text="X"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/tvScoreVisitor"
            android:gravity="center"
            android:padding="16dp"
            android:text="0"
            android:textSize="50sp"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="@string/score_home"
            android:onClick="scoreHome"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="@string/score_visitor"
            android:onClick="scoreVisitor"/>

    </TableRow>

</TableLayout>
